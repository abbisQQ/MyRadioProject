<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.babis.myradioproject.Fragments.MainFragment">



   <android.support.v4.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">


           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="#3ae57f">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/menu"
                   android:layout_gravity="center_vertical"
                   android:paddingLeft="10dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Tune In"
                   android:layout_gravity="center"
                   android:textColor="#fff"
                   android:layout_marginLeft="30dp"
                   android:textSize="23sp"/>

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/cast"
                   android:layout_gravity="center"
                   android:layout_marginLeft="160dp"
                   />


                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="30dp"
                       android:src="@drawable/search"
                       android:layout_gravity="center"
                       android:layout_marginLeft="10dp"
                       />



               </LinearLayout>
           </android.support.v7.widget.CardView>




           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="12dp"
               android:paddingTop="12dp"
               android:textColor="#373737"
               android:textSize="25sp"
               android:text="Its Friday Evening" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="12dp"
               android:textColor="#a4a4a4"
               android:textSize="18sp"
               android:text="Play something for... "
               android:paddingBottom="10dp"/>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/container_top_row">




            </FrameLayout>




           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="12dp"
               android:paddingTop="12dp"
               android:textColor="#373737"
               android:textSize="25sp"
                android:text="Recent Activity"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="12dp"
               android:text="Rectly Played Or Added"
               android:textColor="#a4a4a4"
               android:textSize="18sp"
               android:paddingBottom="10dp"/>


           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/container_middle_row">




           </FrameLayout>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="12dp"
               android:paddingTop="12dp"
               android:textColor="#373737"
               android:textSize="25sp"
               android:text="Party Time"
               tools:text="its friday evening" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="12dp"
               android:textColor="#a4a4a4"
               android:textSize="18sp"
               android:text="The Roof Is On Fire!"
               android:paddingBottom="10dp"/>


           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/container_bottom_row">




           </FrameLayout>





       </LinearLayout>

   </android.support.v4.widget.NestedScrollView>

</FrameLayout>
